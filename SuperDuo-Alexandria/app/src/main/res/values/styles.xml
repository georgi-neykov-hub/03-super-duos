<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorButtonNormal">?attr/colorAccent</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="drawerArrowStyle">@style/AppTheme.Toolbar.DrawerArrowStyle</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionModeBackground">?attr/colorPrimary</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="drawerArrowStyle">@style/AppTheme.Toolbar.DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Toolbar.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
